@model EF_DBFirst.Models.SinhVien



<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Danh Sách Sinh Viên</title>
    <link rel="stylesheet" href="~/css/style.css">
</head>
<body style="display: flex; align-items: center; justify-content: center; font-family: Arial, sans-serif; background-color: #f5f5f5; margin: 0; height: 100vh;">
    <div class="container" style="width: 100%; max-width: 600px; padding: 20px; background-color: #fff; border-radius: 8px; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);">
        <h1 style="text-align: center; color: #333;">Quản lý Sinh Viên</h1>

        <form asp-action="Create" style="margin-top: 20px;">
            <div class="form-group" style="margin-bottom: 15px;">
                <label for="Mssv" style="display: block; font-weight: bold; color: #333;">MSSV</label>
                <input asp-for="Mssv" class="form-control" style="width: 100%; padding: 8px; border-radius: 4px; border: 1px solid #ccc;" />
            </div>
            <div class="form-group" style="margin-bottom: 15px;">
                <label for="Ten" style="display: block; font-weight: bold; color: #333;">Tên</label>
                <input asp-for="Ten" class="form-control" style="width: 100%; padding: 8px; border-radius: 4px; border: 1px solid #ccc;" />
            </div>
            <div class="form-group" style="margin-bottom: 15px;">
                <label for="Khoa" style="display: block; font-weight: bold; color: #333;">Khoa</label>
                <input asp-for="Khoa" class="form-control" style="width: 100%; padding: 8px; border-radius: 4px; border: 1px solid #ccc;" />
            </div>
            <button type="submit" class="btn btn-primary" style="width: 100%; padding: 10px; background-color: #007bff; color: white; border: none; border-radius: 4px; font-size: 16px; cursor: pointer;">Thêm</button>
        </form>

        <!-- Nút Thêm -->
    </div>
</body>
</html>

